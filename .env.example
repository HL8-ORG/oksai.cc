NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://oksai:oksai_dev_password@localhost:5432/oksai
DB_HOST=localhost
DB_PORT=5432
DB_USER=oksai
DB_PASSWORD=oksai_dev_password
DB_NAME=oksai

# Redis (可选，用于会话缓存)
REDIS_URL=redis://localhost:6379

# Better Auth
# 生成强密钥：openssl rand -base64 32
# ⚠️ 重要：Better Auth 会自动读取这些环境变量
# 不要在配置中显式设置 secret 和 baseURL
BETTER_AUTH_SECRET=oksai_better_auth_secret_key_for_development_minimum_32_characters
BETTER_AUTH_URL=http://localhost:3000

# CORS（前端地址）
CORS_ORIGIN=http://localhost:5173

# OAuth - GitHub (可选)
# 设置指南：docs/GITHUB_OAUTH_SETUP.md
# 创建应用：https://github.com/settings/developers
# 回调 URL：http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OAuth - Google (可选)
# 设置指南：docs/GOOGLE_OAUTH_SETUP.md
# 创建应用：https://console.cloud.google.com/apis/credentials
# 回调 URL：http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

{
  "name": "@oksai/source",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nx serve gateway",
    "dev:web": "nx dev @oksai/web-admin",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:staged": "lint-staged",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:generate": "nx run @oksai/database:db:generate",
    "db:migrate": "nx run @oksai/database:db:migrate",
    "db:push": "nx run @oksai/database:db:push",
    "db:studio": "nx run @oksai/database:db:studio",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:dev": "docker-compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml up",
    "check:auth": "node scripts/check-better-auth-config.js",
    "verify:gateway": "node scripts/verify-gateway-startup.js",
    "test:auth": "tsx apps/gateway/test-auth.ts",
    "test:oauth": "tsx apps/gateway/test-oauth.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@nx/js": "22.5.1",
    "@nx/node": "^22.5.3",
    "@nx/vite": "22.5.1",
    "@nx/vitest": "22.5.1",
    "@nx/web": "22.5.1",
    "@nx/webpack": "^22.5.3",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.8",
    "@swc/helpers": "0.5.18",
    "@types/node": "20.19.9",
    "@vitest/coverage-v8": "4.0.9",
    "@vitest/ui": "4.0.9",
    "drizzle-kit": "^0.24.0",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "lint-staged": "^16.3.1",
    "nx": "22.5.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "verdaccio": "^6.0.5",
    "vite": "^7.0.0",
    "vitest": "4.0.9"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
